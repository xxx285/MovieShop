@model MovieShop.Core.Models.Request.ReviewRequestModel

<h3>
    Share Your Review On <span class="text-monospace">@ViewBag.Title</span>
</h3>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <img class="img-fluid" src="@ViewBag.PosterUrl" alt="@ViewBag.Title" />
    </div>
    <div class="col-md-8">
        <form asp-action="Review" asp-route-movieId="@ViewBag.Id">
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label font-weight-bold"></label>
                <textarea asp-for="ReviewText" class="form-control"  rows="10"></textarea>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label font-weight-bold">Rating (0 to 10)</label>
                @*<input asp-for="Rating" class="form-control" />*@
                <input asp-for="Rating" type="range" class="form-control-range" min="0" max="9.9" step="0.1">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>